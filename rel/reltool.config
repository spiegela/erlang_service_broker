%% -*- mode: erlang -*-
%% ex: ft=erlang
{sys, [
       {lib_dirs, ["..", "../deps", "../.."]},
       {erts, [{mod_cond, derived}, {app_file, strip}]},
       {app_file, strip},
       {rel, "service_broker", "1",
        [
         kernel,
         stdlib,
         sasl,
         crypto,
         cowboy,
         mnesia,
         service_broker
        ]},
       {rel, "start_clean", "",
        [
         kernel,
         stdlib,
         sasl,
         crypto,
         cowboy,
         mnesia,
         service_broker
        ]},
       {boot_rel, "service_broker"},
       {profile, embedded},
       {incl_cond, derived},
       {excl_archive_filters, [".*"]}, %% Do not archive built libs
       {excl_sys_filters, ["^bin/(?!start_clean.boot)",
                           "^erts.*/bin/(dialyzer|typer)",
                           "^erts.*/(doc|info|include|lib|man|src)"]},
       {excl_app_filters, ["\.gitignore"]},
       {app, service_broker, [{incl_cond, include}]},
       {app, sasl,   [{incl_cond, include}]},
       {app, stdlib, [{incl_cond, include}]},
       {app, crypto, [{incl_cond, include}]},
       {app, kernel, [{incl_cond, include}]},
       {app, ranch, [{incl_cond, include}]},
       {app, cowlib, [{incl_cond, include}]},
       {app, cowboy, [{incl_cond, include}]},
       {app, compiler, [{incl_cond, include}]}
      ]}.

{target_dir, "service_broker"}.

{overlay, [
           {mkdir, "log/sasl"},
           {copy, "files/erl", "\{\{erts_vsn\}\}/bin/erl"},
           {copy, "files/nodetool", "releases/\{\{rel_vsn\}\}/nodetool"},
           {copy, "service_broker/bin/start_clean.boot",
                  "\{\{erts_vsn\}\}/bin/start_clean.boot"},
           {copy, "files/service_broker", "bin/service_broker"},
           {copy, "files/service_broker.cmd", "bin/service_broker.cmd"},
           {copy, "files/start_erl.cmd", "bin/start_erl.cmd"},
           {copy, "files/install_upgrade.escript", "bin/install_upgrade.escript"},
           {copy, "files/sys.config", "releases/\{\{rel_vsn\}\}/sys.config"},
           {copy, "files/vm.args", "releases/\{\{rel_vsn\}\}/vm.args"}
          ]}.
